<section id="body-content" class="container">
  <%= render partial: 'shared/user', locals: { user: @user } %>

  <div class="row mt-4">
    <div class="col-lg-10 border border-dark">
      <h4>Bio:</h4>
      <p class="mt-2"><%= @user.bio %></p>
    </div>
  </div>

  <% @posts.each_with_index do |post, index| %>  
    <div class="row mt-3">
      <div class="col-lg-10 border border-dark">
        <h4 class="pt-2"><%= link_to "Post ##{index + 1}", user_post_path(@user, post), class: "text-dark" %></h4>
        <p class="mt-2"><%= truncate(post.text, length: 200, omission: '...') %></p>
        <p class="d-flex justify-content-end">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
      </div>
    </div>
  <% end %>

  <div class="row mt-3 justify-content-center">
    <div class="col-lg-12 text-center">
      <%= link_to "See all posts", user_posts_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</section>
